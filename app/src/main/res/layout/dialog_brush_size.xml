<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ibSmallBrush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="image_small"
        app:layout_constraintEnd_toEndOf="@+id/ibMediumBrush"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/ibMediumBrush"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/small" />

    <ImageButton
        android:id="@+id/ibMediumBrush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="image_medium"
        app:layout_constraintBottom_toTopOf="@+id/ibLargeBrush"
        app:layout_constraintEnd_toEndOf="@+id/ibLargeBrush"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/ibLargeBrush"
        app:layout_constraintTop_toBottomOf="@+id/ibSmallBrush"
        app:srcCompat="@drawable/medium" />

    <ImageButton
        android:id="@+id/ibLargeBrush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="image_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/large" />
</androidx.constraintlayout.widget.ConstraintLayout>